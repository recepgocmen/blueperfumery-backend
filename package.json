{
  "name": "blueperfumery-backend",
  "version": "1.0.0",
  "description": "Blue Perfumery Backend API - MongoDB + Express + TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "seed": "ts-node src/utils/seedDatabase.ts",
    "migrate": "ts-node src/utils/migrateData.ts",
    "add-perfumes": "ts-node src/utils/addNewPerfumes.ts",
    "update-perfumes": "ts-node src/utils/updatePerfumeNotes.ts",
    "sync-perfumes": "ts-node src/utils/syncProductionPerfumes.ts",
    "doc": "ts-node src/utils/docAgent.ts",
    "doc:status": "ts-node src/utils/docAgent.ts status",
    "doc:search": "ts-node src/utils/docAgent.ts search"
  },
  "keywords": [
    "perfume",
    "api",
    "mongodb",
    "express",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
